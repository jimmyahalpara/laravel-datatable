{
    "name": "jimmyahalpara/laravel-datatable",
    "description": "A powerful Laravel package for building advanced DataTable filters with column filtering, global search, and custom filters",
    "keywords": ["laravel", "datatable", "filters", "eloquent", "search", "pagination"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jimmy Ahalpara",
            "email": "jimmy@ahalpara.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "illuminate/database": "^9.0|^10.0|^11.0",
        "illuminate/http": "^9.0|^10.0|^11.0",
        "illuminate/contracts": "^9.0|^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6|^10.0",
        "orchestra/testbench": "^7.0|^8.0|^9.0",
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "JimmyAhalpara\\LaravelDatatable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JimmyAhalpara\\LaravelDatatable\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JimmyAhalpara\\LaravelDatatable\\DataTableServiceProvider"
            ],
            "aliases": {
                "DataTable": "JimmyAhalpara\\LaravelDatatable\\Facades\\DataTable"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    }
}